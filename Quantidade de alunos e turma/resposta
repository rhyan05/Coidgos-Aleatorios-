calu = 1
calus = 1
med = 0

turma = int(input("Número de turmas: "))

while turma >= calu:
    aluno = int(input("Número de alunos na turma: "))
    total_notas = 0
    for i in range(aluno):
        n1 = int(input("Nota: "))
        total_notas += n1
    
    if aluno > 0:
        media = total_notas / aluno
    else:
        media = 0

    print(f"Soma das notas: {total_notas}")
    print(f"Média das notas: {media:.2f}")

    calu += 1
